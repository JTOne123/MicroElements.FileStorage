<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\build\common.props" />

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>MicroElements.FileStorage.ZipEngine</PackageId>
    <Description>ZipEngine for MicroElements.FileStorage supports zip archives and nuget packages. NuGet packages can be remote.</Description>
    <PackageTags>Zip NuGet</PackageTags>
    <RootNamespace>MicroElements.FileStorage</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NuGet.Common" Version="4.5.0" />
    <PackageReference Include="NuGet.Protocol.Core.v3" Version="4.2.0" />
    <PackageReference Include="System.IO.Compression.ZipFile" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MicroElements.FileStorage\MicroElements.FileStorage.csproj" />
  </ItemGroup>

</Project>
